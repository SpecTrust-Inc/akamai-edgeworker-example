{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "typeRoots": ["./node_modules/@types"],
    "removeComments": true
  },
  "include": ["**/*.ts"]
}
